        dibTmp.iconoMover = Image.Load("propiedades.png")
        dibTmp.tipoIcono = "propiedades.png"

      Default
        dibTmp.ptoControl = False

    End Select
    dibTmp.dibuja()
  Next

Catch
  Debug "Error dibujando..."
  Debug Error.Text
  Debug Error.Where

End
